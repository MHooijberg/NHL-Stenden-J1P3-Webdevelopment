@page
@model MyMeals.Pages.MaaltijdenModel
@{ ViewData["Title"] = "Maaltijden"; }

<style>
    .col-Gerecht {
        opacity: 0.7;
        transition: opacity 1s;
        background-color: gray;
    }

        .col-Gerecht:hover {
            opacity: 1;
        }
</style>

<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <h1>Maaltijden</h1>
            </div>
        </div>


        <div class="row justify-content-between w-100">
            @foreach (Models.Post item in Model.Posts)
            {
                <div class="col-sm-4">
                    <div class="row gy-4 row-cols-1 row-cols-sm-2 row-cols-md-3">
                        <div class="col-Gerecht m-2">
                            <img src="~/img/meals/prei-stamppot-met-kip-ketjap-418x315.jpg" class="mw-100" type="submit" onclick="" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-Beschrijving m-2">
                            <h7>@item.Beschrijving</h7>
                        </div>
                    </div>
                </div>}
        </div>
        <br>
    </div>
</body>
