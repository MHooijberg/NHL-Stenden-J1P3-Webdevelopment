@page
@model MyMeals.Pages.MaaltijdModel
@{
    ViewData["Title"] = "Maaltijd"; // Naam van het gerecht (moet wel gesaniteerd worden)
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />

    <style>
        .aanpasbutton {
            background-color: #22863a;
            border: none;
            color: white;
            border-radius: 10px;
            margin: 5px;
            width: 120px;
            height: 30px;
        }

        .container {
            padding: 10px;
        }

        button:hover {
            opacity: 0.8;
        }

        .col-sm-4 {
            border-radius: 5px;
            height: 205px;
            margin: 10px;
        }

        .col-lg-2 {
            border-radius: 5px;
            height: 110px;
            
            
        }

        div.stars {
            width: 270px;
            display: inline-block
        }

        .mt-200 {
            margin-top: 125px
        }

        input.star {
            display: none;
        }

        label.star {
            float: right;
            padding: 10px;
            font-size: 15px;
            color: #4A148C;
            transition: all .2s
        }

        input.star:checked ~ label.star:before {
            content: '\f005';
            color: #FD4;
            transition: all .25s
        }

        input.star-5:checked ~ label.star:before {
            color: #FE7;
            text-shadow: 0 0 20px #952
        }

        input.star-1:checked ~ label.star:before {
            color: #F62
        }

        label.star:hover {
            transform: rotate(-15deg) scale(1.3)
        }

        label.star:before {
            content: '\f006';
            font-family: FontAwesome
        }

    </style>
</head>
<body>
    <div class="container">
        <br />
        <div class="row">
            <h2>Titel</h2>

            <div class="col-sm-2"></div>
            <div class="col-sm-2">
