@page
@model MyMeals.Pages.Maaltijd.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Maaltijd</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Maaltijd.Naam" class="control-label"></label>
                <input asp-for="Maaltijd.Naam" class="form-control" />
                <span asp-validation-for="Maaltijd.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maaltijd.GebruikerId" class="control-label"></label>
                <select asp-for="Maaltijd.GebruikerId" class ="form-control" asp-items="ViewBag.GebruikerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Maaltijd.Ingredienten" class="control-label"></label>
                <input asp-for="Maaltijd.Ingredienten" class="form-control" />
                <span asp-validation-for="Maaltijd.Ingredienten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maaltijd.Vegetarisch" class="control-label"></label>
                <input asp-for="Maaltijd.Vegetarisch" class="form-control" />
                <span asp-validation-for="Maaltijd.Vegetarisch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maaltijd.AfbeeldingId" class="control-label"></label>
                <input asp-for="Maaltijd.AfbeeldingId" class="form-control" />
                <span asp-validation-for="Maaltijd.AfbeeldingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
